{
  "scripts": {
    "dev:userfrontend": "npm run dev --prefix frontend/user",
    "dev:backend": "npm run dev --prefix backend",
    "dev:user": "concurrently --raw --kill-others-on-fail --names \"frontend,backend\" --prefix-colors \"bgBlue.bold,bgGreen.bold\"  \"npm run dev:userfrontend\" \"npm run dev:backend\"",
    "install:client": "cd frontend/user && npm install --legacy-peer-deps",
    "install:server": "cd backend && npm install --legacy-peer-deps",
    "install:all": "npm run install:client && npm run install:server",
    "build:prisma": "cd backend && npm run build:prisma",
    "build:server": "npm run build --prefix backend",
    "build:all": "npm run build --prefix frontend/user && npm run build:server",
    "prod": "node backend/dist/index.js"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "generate-license-file": "^4.0.0"
  }
}
